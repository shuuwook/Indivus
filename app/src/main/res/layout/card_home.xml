<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/home_card_profile_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/home_card_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand Lee"
                app:layout_constraintTop_toTopOf="@+id/home_card_profile_image"
                app:layout_constraintLeft_toRightOf="@+id/home_card_profile_image"
                app:layout_constraintBottom_toTopOf="@+id/home_card_profile_sub"/>

            <TextView
                android:id="@+id/home_card_profile_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM, 소설창작"
                app:layout_constraintTop_toBottomOf="@+id/home_card_profile_name"
                app:layout_constraintLeft_toRightOf="@+id/home_card_profile_image"
                app:layout_constraintBottom_toBottomOf="@+id/home_card_profile_image"/>

            <TextView
                android:id="@+id/home_card_profile_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="어쩌구저쩌구에베베베"
                app:layout_constraintTop_toBottomOf="@+id/home_card_profile_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>